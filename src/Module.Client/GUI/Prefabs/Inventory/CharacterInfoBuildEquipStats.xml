<Prefab Name="CharacterInfoBuildEquipStats">
  <Constants>
    <Constant Name="Container.Width" Value="220" />
    <Constant Name="Container.Height" Value="550" />
  </Constants>
  <Window>
    <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Container.Width" SuggestedHeight="!Container.Height" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Children>
        <!-- Frame -->
        <BrushWidget Id="CharacterInfo.Skills.Frame"
                HorizontalAlignment="Left"
                WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" SuggestedWidth="!Container.Width" SuggestedHeight="!Container.Height"
                Sprite="SquareWRoundedCornersFrame_9" Color="#ffffffff">
          <Children>
            <!-- Background -->
            <BrushWidget Id="CharacterInfo.Background" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
                HorizontalAlignment="Center" VerticalAlignment="Center" Brush="Crpg.Generic.Panel.Background"
                MarginTop="9" MarginBottom="9" MarginLeft="9" MarginRight="9"/>
            <!-- Info Panel-->
            <ListPanel StackLayout.LayoutMethod="VerticalBottomToTop" HeightSizePolicy="CoverChildren" WidthSizePolicy="StretchToParent"
                MarginTop="8" MarginLeft="10" MarginRight="10" Spacing="2" >
              <Children>
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Cost" Parameter.ShouldShowGold="true" Parameter.ValueText="@Cost" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Avg repair cost" Parameter.ShouldShowGold="true" Parameter.ValueText="@AvgRepairCost" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Health points" Parameter.ImgSprite="" Parameter.ValueText="@HealthPoints" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Weight" Parameter.ImgSprite="" Parameter.ValueText="@Weight" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Free weight" Parameter.ImgSprite="" Parameter.ValueText="@FreeWeight" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Weight reduction" Parameter.ImgSprite="" Parameter.ValueText="@WeightReduction" />                
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Percieved Weight" Parameter.ImgSprite="" Parameter.ValueText="@PerceivedWeight" />                
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Time to max speed" Parameter.ImgSprite="" Parameter.ValueText="@TimeToMaxSpeed" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Naked speed" Parameter.ImgSprite="" Parameter.ValueText="@NakedSpeed" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Current speed" Parameter.ImgSprite="" Parameter.ValueText="@CurrentSpeed" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Max weapon length" Parameter.ImgSprite="" Parameter.ValueText="@MaxWeaponLength" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Mov. speed penalty" Parameter.ImgSprite="" Parameter.ValueText="@MovementSpeedPenaltyWhenAttacking" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Mount speed penalty" Parameter.ImgSprite="" Parameter.ValueText="@MountSpeedPenalty" />
                <CharacterInfoBuildEquipStatsItem Parameter.LabelText="Mount stats penalty" Parameter.ImgSprite="" Parameter.ValueText="@AdditionalMountSpeedPenalty" />
              </Children>
            </ListPanel>
          </Children>
        </BrushWidget>
      </Children>
    </Widget>
  </Window>
</Prefab>