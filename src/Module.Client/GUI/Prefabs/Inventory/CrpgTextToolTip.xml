<Prefab Name="CrpgTextToolTip">
  <Parameters>
    <Parameter Name="TextValue" DefaultValue=""/>
    <Parameter Name="TextBrush" DefaultValue="CharacterEdit.Item.Text"/>
  </Parameters>
  <Constants>
    <Constant Name="Widget.Width" Value="100"/>
    <Constant Name="Widget.Height" Value="30"/>
  </Constants>
  <Window>
    <Widget Id="CrpgTextToolTip.Widget" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Widget.Width" SuggestedHeight="!Widget.Height">
      <Children>
        <BrushWidget Id="CrpgTextToolTip.Frame" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Sprite="rounded_frame" Color="#FFFFFFFF">
          <Children>
            <!-- Background -->
            <BrushWidget Id="CrpgTextToolTip.Background" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
                HorizontalAlignment="Center" VerticalAlignment="Center" Brush="Crpg.Generic.Panel.Background"
                MarginTop="9" MarginBottom="9" MarginLeft="9" MarginRight="9"/>
              <Children>
                <!-- Left-aligned label -->
                <TextWidget Id="CrpgTextToolTip.TextWidget" Text="*TextValue" 
                    WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="20"
                    HorizontalAlignment="Left"
                    Brush="*TextBrush" />
              </Children>
            </BrushWidget>
          </Children>
        </BrushWidget>
      </Children>
    </Widget>
  </Window>
</Prefab>