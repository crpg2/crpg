<Prefab Name="UserAndCharacterInfoItem">
  <Constants>
    <Constant Name="Label.Brush" Value="CharacterEdit.Item.Text" />
    <Constant Name="Value.Brush" Value="CharacterEdit.Value.Text" />
  </Constants>
  <Parameters>
      <Parameter Name="LabelText" DefaultValue="Label" />
      <Parameter Name="ImgSprite" DefaultValue="" /> <!-- SPGeneral\SPCoin -->
      <Parameter Name="ShouldShowGold" DefaultValue="false" />
      <Parameter Name="ValueText" DefaultValue="Value" />
  </Parameters>    
  <Window>
    <Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Children>
        <ListPanel StackLayout.LayoutMethod="HorizontalLeftToRight" HeightSizePolicy="CoverChildren" WidthSizePolicy="CoverChildren"
            HorizontalAlignment="Center" MarginTop="2" MarginBottom="2" MarginLeft="2" MarginRight="2" Spacing="5">
          <Children>
          <!-- Left-aligned label -->
            <TextWidget Text="*LabelText" 
              WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="20"
              HorizontalAlignment="Left"
              Brush="!Label.Brush" />
          <!-- Spacer -->
          <!--  <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" /> -->
            <BrushWidget Id="GoldIcon" Brush="Item.Gold.Icon" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
              SuggestedWidth="15" SuggestedHeight="15" IsVisible="*ShouldShowGold" PositionYOffset="2"/>
          <!-- Image if any Right-Aligned-->
          
          <!--
            <ImageWidget Sprite="*ImgSprite" WidthSizePolicy="Fixed" SuggestedWidth="20" HeightSizePolicy="Fixed" SuggestedHeight="20" HorizontalAlignment="Center" VerticalAlignment="Center"  />
          -->
          <!-- Value Right-Aligned-->
            <TextWidget Text="*ValueText" 
              WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="20" 
              HorizontalAlignment="Right"
              Brush="!Value.Brush" />
          </Children>
        </ListPanel>
      </Children>
    </Widget>
  </Window>
</Prefab>