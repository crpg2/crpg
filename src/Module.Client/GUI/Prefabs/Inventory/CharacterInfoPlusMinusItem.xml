<Prefab Name="CharacterInfoPlusMinusItem">
  <Window>
    <ListPanel StackLayout.LayoutMethod="HorizontalLeftToRight"
               WidthSizePolicy="StretchToParent"
               HeightSizePolicy="Fixed" SuggestedHeight="25"
               Spacing="5">
      <Children>

        <!-- Left-aligned label -->
        <TextWidget Text="@ItemLabel" 
                    WidthSizePolicy="Fixed" SuggestedWidth="120"
                    HeightSizePolicy="Fixed" SuggestedHeight="20"
                    HorizontalAlignment="Left"
                    Brush="CharacterEdit.Item.Text" />

        <!-- Spacer that stretches to push buttons to the right -->
        <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" />
        <CrpgButtonPrefab Parameter.ButtonText="-" Parameter.ButtonId="ButtonMinus"
                    Parameter.Width="30" Parameter.Height="30" Parameter.ButtonIsEnabled="@IsButtonMinusEnabled"
                    Parameter.CommandClick="ExecuteClick" />
        <TextWidget IntText="@ItemValue"
                    WidthSizePolicy="Fixed" SuggestedWidth="20"
                    HeightSizePolicy="Fixed" SuggestedHeight="20"
                    HorizontalAlignment="Center"
                    Brush="CharacterEdit.Value.Text" />
        <CrpgButtonPrefab Parameter.ButtonText="+" Parameter.ButtonId="ButtonPlus"
                    Parameter.Width="30" Parameter.Height="30" Parameter.ButtonIsEnabled="@IsButtonPlusEnabled"
                    Parameter.CommandClick="ExecuteClick" />
      </Children>
    </ListPanel>
  </Window>
</Prefab>
