<Prefab Name="UserAndCharacterInfo">
  <Constants>
    <Constant Name="Item.Height" Value="20" />
    <Constant Name="Column1.Width" Value="100" />
  </Constants>
  <Parameters>
    <Parameter Name="MainContainerWidth" DefaultValue="350" />
    <Parameter Name="MainContainerHeight" DefaultValue="150" />
  </Parameters>
  <Window>
    <!-- Character General Info--> <!-- Name, Generation, Level, Experience, Class-->
    <BrushWidget Id="UserAndCharacterInfo.Frame" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="*MainContainerWidth" SuggestedHeight="*MainContainerHeight"
            HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SquareWRoundedCornersFrame_9" Color="#ffffffff"
            Padding="5,10,5,10">
      <Children>
      <!-- Background -->
        <BrushWidget Id="UserAndCharacterInfo.Background" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
          HorizontalAlignment="Center" VerticalAlignment="Center" Brush="Crpg.Generic.Panel.Background"
          MarginTop="9" MarginBottom="9" MarginLeft="9" MarginRight="9"/>
        <!-- body -->
        <ListPanel StackLayout.LayoutMethod="HorizontalLeftToRight" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren"
              HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5" MarginTop="10" MarginLeft="10">
          <Children>
            <!-- Column 1 Character -->
            <ListPanel StackLayout.LayoutMethod="VerticalBottomToTop" HorizontalAlignment="Center" VerticalAlignment="Center" 
                  WidthSizePolicy="Fixed" SuggestedWidth="!Column1.Width" HeightSizePolicy="CoverChildren" 
                  Padding="1" Spacing="1">
              <Children>              
                <UserAndCharacterInfoItem Parameter.LabelText="Name:" Parameter.ValueText="@CharacterName" />
                <UserAndCharacterInfoItem Parameter.LabelText="Class:" Parameter.ValueText="@CharacterClassText" />
                <UserAndCharacterInfoItem Parameter.LabelText="Gen:" Parameter.ValueText="@CharacterGeneration" />
                <UserAndCharacterInfoItem Parameter.LabelText="Level:" Parameter.ValueText="@CharacterLevel" />
                <UserAndCharacterInfoItem Parameter.LabelText="Exp:" Parameter.ValueText="@CharacterExperienceText" />
              </Children>
            </ListPanel>
            <!-- Column 2 Stats -->
            <ListPanel StackLayout.LayoutMethod="VerticalBottomToTop" HorizontalAlignment="Center" VerticalAlignment="Top" 
                  WidthSizePolicy="Fixed" SuggestedWidth="!Column1.Width" HeightSizePolicy="CoverChildren" 
                  MarginTop="5" MarginBottom="5" MarginLeft="5" MarginRight="5" Padding="10">
              <Children>
                <UserAndCharacterInfoItem Parameter.LabelText="Kills:" Parameter.ValueText="@Kills" />
                <UserAndCharacterInfoItem Parameter.LabelText="Deaths:" Parameter.ValueText="@Deaths" />
                <UserAndCharacterInfoItem Parameter.LabelText="Assists:" Parameter.ValueText="@Assists" />
                <UserAndCharacterInfoItem Parameter.LabelText="Playtime:" Parameter.ValueText="@PlayTimeText" />
              </Children>
            </ListPanel>
            <!-- Column 3 User -->
            <ListPanel StackLayout.LayoutMethod="VerticalBottomToTop" HorizontalAlignment="Center" VerticalAlignment="Center" 
                  WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" 
                  MarginTop="5" MarginBottom="5" MarginLeft="5" MarginRight="5" Padding="10">
              <Children>
                <UserAndCharacterInfoItem Parameter.LabelText="User:" Parameter.ValueText="@UserName" />
                <UserAndCharacterInfoItem Parameter.LabelText="Clan:" Parameter.ValueText="@ClanName" />
                <UserAndCharacterInfoItem Parameter.LabelText="Gold:" Parameter.ValueText="@Gold" Parameter.ShouldShowGold="true" />
              </Children>
            </ListPanel>                            
          </Children>
        </ListPanel>
      </Children>
    </BrushWidget>
  </Window>
</Prefab>