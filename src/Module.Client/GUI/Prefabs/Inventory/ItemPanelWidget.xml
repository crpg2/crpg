<Widget xmlns="http://www.taleWorlds.com/schemas/gauntletui">
  <GridWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
    <!-- Left: Filter Buttons -->
    <VerticalBoxWidget HorizontalAlignment="Left" MarginLeft="10" MarginTop="10" MarginBottom="10" SuggestedWidth="300">

      <ButtonWidget Text="All" DoNotAcceptEvents="false" ClickEvent="FilterAll"/>
      <ButtonWidget Text="1H" DoNotAcceptEvents="false" ClickEvent="FilterOneHanded"/>
      <ButtonWidget Text="2H" DoNotAcceptEvents="false" ClickEvent="FilterTwoHanded"/>
      <ButtonWidget Text="Polearm" DoNotAcceptEvents="false" ClickEvent="FilterPolearm"/>
      <ButtonWidget Text="Shields" DoNotAcceptEvents="false" ClickEvent="FilterShields"/>
      <ButtonWidget Text="Weapons" DoNotAcceptEvents="false" ClickEvent="FilterWeapons"/>
      <ButtonWidget Text="Armor" DoNotAcceptEvents="false" ClickEvent="FilterAllArmor"/>
      <ButtonWidget Text="Horses" DoNotAcceptEvents="false" ClickEvent="FilterHorses"/>

    </VerticalBoxWidget>

    <!-- Right: Items Panel -->
    <ListPanel HorizontalAlignment="Right" MarginRight="10" MarginTop="10" MarginBottom="10" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
               ItemsSource="{Items}">
      <ListPanel.ItemTemplate>
        <BrushWidget Brush="{@Item.ItemBrush}" Width="100" Height="100">
          <BrushWidget.TooltipWidget>
            <TextWidget Text="{@Item.Name}" />
          </BrushWidget.TooltipWidget>
        </BrushWidget>
      </ListPanel.ItemTemplate>
    </ListPanel>
  </GridWidget>
</Widget>
