<Prefab>
    <GridWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
                SuggestedHeight="500" SuggestedWidth="800" Margin="10"
                ColumnCount="6" DefaultCellWidth="96" DefaultCellHeight="96"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Brush="Inventory.Grid"
                DataSource="{Items}">

    <GridWidget.ItemTemplate>
        <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="96" SuggestedHeight="96"
                Margin="4" Brush="Inventory.ItemSlot">

        <ImageIdentifierWidget DataSource="{Image}" 
                                ImageId="@Id" 
                                AdditionalArgs="@AdditionalArgs"
                                ImageTypeCode="@ImageTypeCode"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
                                SuggestedWidth="64" SuggestedHeight="64" />

        <Widget.Tooltip>
            <TextWidget Text="{Name}" />
        </Widget.Tooltip>

        </Widget>
    </GridWidget.ItemTemplate>
    </GridWidget>
</Prefab>