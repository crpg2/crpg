<Prefab Name="CrpgItemEntry">
  <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="90" Margin="5" Brush="Inventory.ItemSlot">
    <Children>
      <ImageIdentifierWidget DataSource="{.}" ImageId="@Id" AdditionalArgs="@AdditionalArgs" ImageTypeCode="@ImageTypeCode"
                             WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="80" SuggestedHeight="80"
                             MarginLeft="5" HorizontalAlignment="Left" VerticalAlignment="Center" />
      <TextWidget Text="{Name}" HorizontalAlignment="Left" MarginLeft="100" VerticalAlignment="Center" />
    </Children>
  </Widget>
</Prefab>
