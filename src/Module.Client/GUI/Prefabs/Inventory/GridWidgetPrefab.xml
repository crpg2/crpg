<Prefab Name="GridWidgetPrefab">
  <Constants>
    <Constant Name="Grid.Width" Value="300"/>
    <Constant Name="Grid.Height" Value="300"/>
  </Constants>

  <Window>
    <GridWidget ColumnCount="6"
                WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
                DataSource=".">
      <ItemTemplate>
        <Widget StackLayout.LayoutMethod="VerticalTopToBottom"
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
          <Children>
            <ImageIdentifierWidget 
                DataSource="." 
                ImageId="@Id" 
                AdditionalArgs="@AdditionalArgs" 
                ImageTypeCode="@ImageTypeCode"
                WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
                SuggestedWidth="90" SuggestedHeight="45"
                HorizontalAlignment="Center" VerticalAlignment="Center" />
            <!-- <TextWidget Text="@DisplayName" 
                WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" 
                HorizontalAlignment="Center" VerticalAlignment="Top"
                FontSize="8" />
            -->
          </Children>
        </Widget>
      </ItemTemplate>
    </GridWidget>
  </Window>
</Prefab>