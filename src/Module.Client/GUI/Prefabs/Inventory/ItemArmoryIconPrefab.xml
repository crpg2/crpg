<Prefab Name="ItemArmoryIconPrefab">
  <Parameters>
    <Parameter Name="Width"  DefaultValue="15" />
    <Parameter Name="Height" DefaultValue="15" />
  </Parameters>  
  <Window>
    <Widget IsVisible="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="*Width" SuggestedHeight="*Height" >
      <Children>            
        <BrushWidget Id="YoursAvailable" Brush="Item.Armory.Icon_Yours_Available" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="*Width" SuggestedHeight="*Height" IsVisible="@YoursAvailable" />
        <BrushWidget Id="YoursBorrowed" Brush="Item.Armory.Icon_Yours_Borrowed" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="*Width" SuggestedHeight="*Height" IsVisible="@YoursBorrowed" />
        <BrushWidget Id="NotYoursAvailible" Brush="Item.Armory.Icon_NotYours_Available" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="*Width" SuggestedHeight="*Height" IsVisible="@NotYoursAvailible" />
        <BrushWidget Id="NotYoursBorrowed" Brush="Item.Armory.Icon_NotYours_Borrowed" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="*Width" SuggestedHeight="*Height" IsVisible="@NotYoursBorrowed" />            
        <BrushWidget Id="BorrowedByYou" Brush="Item.Armory.Icon_BorrowedByYou" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="*Width" SuggestedHeight="*Height" IsVisible="@BorrowedByYou" />            
      </Children>
    </Widget>
  </Window>
</Prefab>