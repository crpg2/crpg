<Prefab Name="ItemInfoPrefab">
  <Window>
    <Widget>
     <Children>
        <ImageIdentifierWidget DataSource="{ImageIdentifier}"
            ImageId="@Id"
            AdditionalArgs="@AdditionalArgs"
            ImageTypeCode="@ImageTypeCode"
            WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="90" SuggestedHeight="45"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Margin="4"
            DoNotAcceptEvents="True" />

     </Children>

    
    <!-- Fields needed:
    so basically need to be able to feed it a list of different info and it make a 2 column listpanel displaying
    each entry in listpanel is [Title][Value]. Value can be text or sprites

                Ranged

                [IMG]
                Item Name

        Type/Class      Features
        Weight          Damage
        Accuracy        Missile speed
        Reload speed    Aim speed
        Requirement     Upkeep
        Price
    

                Armor

                [IMG]
                Item Name
        Type/Class      Armor set
        Culture         Features
        Material        Weight
        Body Armor      Arm armor
        Leg Armor       Upkeep
        Price


                Weapon
                [IMG]
                Item Name
        Type/Class      Features
        Weight          Reach
        Handling        Thrust damage
        Thrust speed    Upkeep
        Price
    -->

    </Widget>
  </Window>
</Prefab>