<Prefab Name="ItemInfoPrefab">
  <Parameters>
    <Parameter Name="Width" DefaultValue="220"/>
    <Parameter Name="Height" DefaultValue="430"/>
  </Parameters>
  <Window>
    <BrushWidget Id="ItemInfo.Frame" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="*Width" SuggestedHeight="*Height"
            HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SquareWRoundedCornersFrame_9" Color="#ffffffff"
            Padding="5,10,5,10">
     <Children>
        <!-- Close Button -->

        <!-- Vertical ListPanel Holding all -->
        <ListPanel StackLayout.LayoutMethod="VerticalBottomToTop" HorizontalAlignment="Center" VerticalAlignment="Top"
                WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" 
                Spacing="2"
                DoNotAcceptEvents="true" DoNotPassEventsToChildren="false">
          <Children> 
            <ImageIdentifierWidget DataSource="{ImageIdentifier}"
                        ImageId="@Id"
                        AdditionalArgs="@AdditionalArgs"
                        ImageTypeCode="@ImageTypeCode"
                        WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
                        SuggestedWidth="90" SuggestedHeight="45"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Margin="4"
                        DoNotAcceptEvents="True" />
            <TextWidget Id="Item.Name" Text="@ItemName" WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="20" Brush="ItemInfo.ItemName.Text" />

          </Children>
        <!-- 2 Column horizontal list panel -->
        <!-- Title/Value item --> <!-- Title/Value item-->
        
        </ListPanel>
     </Children>

    
    <!-- Fields needed:
    so basically need to be able to feed it a list of different info and it make a 2 column listpanel displaying
    each entry in listpanel is [Title][Value]. Value can be text or sprites

                Ranged

                [IMG]
                Item Name

        Type/Class      Features
        Weight          Damage
        Accuracy        Missile speed
        Reload speed    Aim speed
        Requirement     Upkeep
        Price
    

                Armor

                [IMG]
                Item Name
        Type/Class      Armor set
        Culture         Features
        Material        Weight
        Body Armor      Arm armor
        Leg Armor       Upkeep
        Price


                Weapon
                [IMG]
                Item Name
        Type/Class      Features
        Weight          Reach
        Handling        Thrust damage
        Thrust speed    Upkeep
        Price
    -->

    </BrushWidget>
  </Window>
</Prefab>