<Prefab Name="CrpgItemListView">
  <Variables>
    <Variable Name="FilterPanelWidth" Value="250" />
    <Variable Name="ItemPanelWidth" Value="800" />
    <Variable Name="PanelMargin" Value="10" />
  </Variables>

  <Children>
    <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
      <Children>
        <!-- Horizontal container -->
        <HorizontalBoxWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Margin="!PanelMargin">
          <Children>

            <!-- Left Panel: Filters -->
            <VerticalBoxWidget WidthSizePolicy="Fixed" SuggestedWidth="!FilterPanelWidth" HeightSizePolicy="StretchToParent">
              <Children>
                <ButtonWidget Brush="Inventory.TabButton" MarginBottom="5" OnClick="OnFilterAll">
                  <Children><TextWidget Text="All" /></Children>
                </ButtonWidget>
                <ButtonWidget Brush="Inventory.TabButton" MarginBottom="5" OnClick="OnFilterOneHanded">
                  <Children><TextWidget Text="1H" /></Children>
                </ButtonWidget>
                <ButtonWidget Brush="Inventory.TabButton" MarginBottom="5" OnClick="OnFilterTwoHanded">
                  <Children><TextWidget Text="2H" /></Children>
                </ButtonWidget>
                <ButtonWidget Brush="Inventory.TabButton" MarginBottom="5" OnClick="OnFilterPolearm">
                  <Children><TextWidget Text="Polearm" /></Children>
                </ButtonWidget>
                <!-- Add more filters if needed -->
              </Children>
            </VerticalBoxWidget>

            <!-- Right Panel: Items -->
            <ListPanel WidthSizePolicy="Fixed" SuggestedWidth="!ItemPanelWidth" HeightSizePolicy="StretchToParent"
                       StackLayout.LayoutMethod="Vertical" MarginLeft="20" MarginRight="10" VerticalAlignment="Top"
                       ItemsSource="{FilteredItems}" ItemTemplate="CrpgItemEntry" />

          </Children>
        </HorizontalBoxWidget>
      </Children>
    </Widget>
  </Children>
</Prefab>
